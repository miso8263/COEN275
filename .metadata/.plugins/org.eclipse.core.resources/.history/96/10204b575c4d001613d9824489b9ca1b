package pizza;

import java.awt.Color;

public class Pepperoni extends PizzaDecorator {
	
	public Pepperoni(Pizza pizza)
	{
		super(pizza);
	}
	
	@Override
	public int getCost()
	{
		return 1;
	}
	
	@Override
	public void draw(Graphics g)
	{
		g.setColor(Color.RED);
        g.fillOval(50, 50, 50, 50);
	}

}
