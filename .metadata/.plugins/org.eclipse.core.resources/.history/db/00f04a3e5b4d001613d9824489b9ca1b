package pizza;

import java.awt.Color;
import java.awt.Graphics;
import javax.swing.JPanel;

public class CheesePizza implements Pizza {
	
	public CheesePizza(){
		
	}
	
	public int getCost(){
		return 1;
	}
	
	public void draw() {
        super.paintComponent(g);       
        g.setColor(Color.RED);
        g.fillOval(50, 50, 50, 50);
    }  
}
