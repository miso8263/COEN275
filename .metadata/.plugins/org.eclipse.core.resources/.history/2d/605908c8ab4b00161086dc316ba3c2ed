	 */
	public static int getSpeed(){
		return -1;
	}
	
	/**
	 * set value of speed
	 * @param newSpeed
	 */
	public static void setSpeed(int newSpeed){
		
	}
	
	public static boolean getPaused(){
		
	}
}
