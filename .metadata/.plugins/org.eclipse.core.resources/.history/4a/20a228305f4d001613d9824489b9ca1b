package pizza;

import java.awt.Color;
import java.awt.Graphics;

public class Pepperoni extends PizzaDecorator {
	
	public Pepperoni(Pizza pizza)
	{
		super(pizza);
	}
	
	@Override
	public int getCost()
	{
		return super.getCost() + 1;
	}
	
	@Override
	public void draw()
	{
		g.setColor(Color.RED);
        g.fillOval(10, 10, 10, 10);
	}

}
