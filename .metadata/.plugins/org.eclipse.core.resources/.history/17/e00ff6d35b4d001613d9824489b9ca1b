package pizza;

public class PizzaDecorator implements Pizza {
	protected Pizza decoratedPizza;
	
	public PizzaDecorator(Pizza decoratedPizza)
	{
		this.decoratedPizza = decoratedPizza;
	}
	
	public int getCost()
	{
		return decoratedPiza.getCost();
	}
	
	public void draw()
	{
		decoratedPizza.draw();
	}
}
